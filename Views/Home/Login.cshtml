@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}


<link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Content/js/bootstrap.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>


<div class="row">
    <div class="col-sm-12" style="background-color:whitesmoke;height:400px;margin-top:-20px">
        <div class="col-sm-4"></div>
        <div class="col-sm-4 panel-body" style="border:2px solid maroon;margin-top:13px">
            <center>
                <h1 style="color:maroon"><u>LOGIN</u></h1>
            </center>
            <form action="/Home/Login" method="post">
                Enter user ID
                <input type="email" name="txtid" class="form-control" required />
                Enter Password
                <input type="password" name="txtpass" class="form-control" required />
                Captch Code
                <input type="text" readonly name="cph" value="@ViewBag.cph" style="width:30%" class="form-control"/>
                Enter captch Code
                <input type="text" class="form-control" name="txtcph" required autocomplete="off"/><br />
                <input type="submit" class="form-control btn-warning" value="Sign IN" />
            </form>            
        </div>
   <div class="col-sm-4"></div>            
    </div>
            
