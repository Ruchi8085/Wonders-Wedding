@{
    ViewBag.Title = "ViewEnquiry";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@using System.Data;
@using System.Data.SqlClient;
@using myproject.Models;
<link href="~/Content/akash.css" rel="stylesheet" />
<script src="~/Content/js/jquery-2.1.0.min.js"></script>
<script src="~/Content/akash.js"></script>
<script>
    $(document).ready(function () {
        $("#example").DataTable();
    })
</script>

<div class="col-sm-12" style="background:whitesmoke;border:2px solid black">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <h2 style="color:maroon;text-align:center"><u><b>ViewEnquiry</b></u></h2>
        <table class="table" id="example" style="border:2px solid maroon">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Message</th>
                    <th>Data</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @{
                    databasemManager db = new databasemManager();
                    string cmd = "select * from tbl_contact";
                    DataTable dt = db.GetAllRecords(cmd);
                    if (dt.Rows.Count > 0)
                    {
                        for (int i = 0; i < dt.Rows.Count; i++)
                        {
                            <tr>
                                <td>@dt.Rows[i]["name"]</td>
                                <td>@dt.Rows[i]["email"]</td>
                                <td>@dt.Rows[i]["mobile"]</td>
                                <td>@dt.Rows[i]["msg"]</td>
                                <td>@dt.Rows[i]["edt"]</td>
                                <td>
                                    <a href="/Admin/DelEnquiry?del=@dt.Rows[i]["email"]"><span class="fa fa-trash"></span></a>
                                </td>
                                <td>
                                    <a href="/Admin/UpEnquiry?UP=@dt.Rows[i]["email"]"><span class="fa fa-edit"></span></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
